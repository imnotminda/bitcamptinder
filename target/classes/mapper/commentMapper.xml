<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="CommentMapper">
    <insert id="insertComment" parameterType="map">
        INSERT INTO date_comment (user_id, comment_content, logtime)
        VALUES (#{userId}, #{commentContent}, NOW())
    </insert>

    <insert id="insertIntoProfileBoard" parameterType="map">
        INSERT INTO date_profile_board (user_id, comment_seq)
        VALUES (#{userId}, #{commentSeq})
    </insert>

    <select id="getLastInsertId" resultType="int">
        SELECT LAST_INSERT_ID()
    </select>
</mapper>